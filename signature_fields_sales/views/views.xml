<odoo>
  <data>

    <record model="ir.ui.view" id="sale_order_view_inherit">
    <field name="name">sale.order.signature.field</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <field name="sale_order_template_id" position="after">
          <field name="x_signature_doc" widget="image" class="oe_avatar"/>
        </field>
<!--        <field name="note" position="before">-->
<!--            <div class="oe_left oe_block">-->
<!--              <field name="x_discount_selection" class="o_input o_field"/>-->
<!--              <field name="x_discount_rate" class="o_input o_field"/>-->
<!--            </div>-->
<!--        </field>-->
<!--        <field name="amount_untaxed" position="after">-->
<!--          <field name="x_discounted_price" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"  />-->
<!--        </field>-->
         <xpath expr="//group[@name='sale_total']" position="replace">
                    <group col="4">
                        <group name="discount" colspan="2">
                            <field name="x_discount_selection"/>
                            <field name="x_discount_rate"/>
                        </group>
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            <field name="amount_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="x_discounted_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="amount_tax" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <div class="oe_subtotal_footer_separator oe_inline">
                                <label for="amount_total"/>
                                <button name="button_dummy" states="draft,sent" string="(update)" type="object" class="oe_edit_only oe_link"/>
                            </div>
                            <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                </xpath>

    </field>
  </record>

